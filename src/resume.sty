\ProvidesPackage{resume}

\usepackage{url}
\usepackage{calc}
\usepackage{parskip}
\usepackage{titlesec}
\usepackage{enumitem}
\usepackage{fullpage}

% Font
\usepackage[T1]{fontenc}
\usepackage{libertine}

% Prevent word hyphenation
\tolerance=1
\emergencystretch=\maxdimen
\hyphenpenalty=10000
\hbadness=10000

% Margins
\addtolength{\voffset}{-1cm}

% Colors
\usepackage{xcolor}
\definecolor{link-red}{HTML}{8a0426}
\definecolor{gray}{HTML}{a8a8a8}
\definecolor{dark-gray}{HTML}{2c2c2c}

% Links
\usepackage{hyperref}
\urlstyle{same}
\hypersetup{colorlinks,breaklinks, urlcolor=link-red,linkcolor=link-red}

\pagestyle{empty}

% Set all text's left skip
\leftskip=0.21\textwidth

% maketitle
\renewcommand*{\maketitle}{
  {
    \centering{\Huge \@title}\\
    \centering{\LARGE \color{gray} \textit{Resume}}\\[.3in]
  }
}

% Section/Subsection headings
\titleformat{\section}
            {\Large\raggedright\color{dark-gray}}
            {}
            {0em}
            {}
            [\titlerule]
\titlespacing{\section}
            {0em}
            {1em}
            {1em}

\titleformat{\subsection}
            [leftmargin]
            {\normalsize\raggedleft}
            {}
            {0em}
            {}
            []
\titlespacing{\subsection}
            {0.2\textwidth}
            {1em}
            {1.5em}
